<h1 class="text-center my-4">Available Rooms</h1>
<div class="container">
  <form action="/create-room" method="post" class="mb-4">
    <div class="input-group">
      <input
        type="text"
        name="roomName"
        class="form-control"
        placeholder="Room Name"
        required
      />
      <div class="input-group-append">
        <button type="submit" class="btn btn-primary">Create Room</button>
      </div>
    </div>
  </form>

  <ul class="list-group">
    <% rooms.forEach(function(room) { %>
    <li
      class="list-group-item d-flex justify-content-between align-items-center"
    >
      <%= room.name %>
      <div>
        <!-- Join Button (you may need to implement this) -->
        <a href="/join-room/<%= room._id %>" class="btn btn-success btn-sm"
          >Join</a
        >
        <!-- Delete button for each room -->
        <form
          action="/delete-room/<%= room._id %>"
          method="post"
          class="d-inline"
        >
          <button type="submit" class="btn btn-danger btn-sm">Delete</button>
        </form>
      </div>
    </li>
    <% }); %>
  </ul>
</div>
