<!-- views/login.ejs -->
<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-3">
      <h2 class="my-4 text-center">Login to WhatsApp Clone</h2>
      <form action="/login" method="POST" class="form-signin">
        <div class="form-group">
          <label for="email">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            class="form-control"
            placeholder="Email"
            required
          />
        </div>

        <div class="form-group">
          <label for="password">Password</label>
          <input
            type="password"
            id="password"
            name="password"
            class="form-control"
            placeholder="Password"
            required
          />
        </div>

        <button class="btn btn-lg btn-primary btn-block" type="submit">
          Login
        </button>
      </form>
    </div>
  </div>
</div>
